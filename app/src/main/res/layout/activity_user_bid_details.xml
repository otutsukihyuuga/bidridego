<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Ride Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <!-- Source to Destination -->
        <TextView
            android:id="@+id/bid_details_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
            android:textSize="12sp"
            android:textColor="@color/grey"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bid_details_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <!-- Date, Time, and Distance -->
        <TextView
            android:id="@+id/bid_details_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/bid_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <!-- Add more ride details as needed -->

    </LinearLayout>

    <!-- Driver Information -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bid_details_user_circle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_car"
            android:padding="8dp"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circularbackground"/>

        <TextView
            android:id="@+id/bid_details_driver_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact number"/>

        <TextView
            android:id="@+id/bid_details_driver_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Accept Bid Button -->
        <Button
            android:id="@+id/accept_bid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="acceptBid"
            android:text="Accept Bid"/>
    </LinearLayout>

</LinearLayout>
